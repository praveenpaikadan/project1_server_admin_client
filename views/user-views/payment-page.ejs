    <style>

      body{
        font-family: 'Ubuntu', sans-serif;
        /* width: 100vw; */
        width: 300px;
        margin: 0px;
        border: 0px;
        height: 100vh;
        box-sizing: border-box;
       }

      .wrapper-container{
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100vw;
        height: 100vh;
      }

      button {
        max-width: '90%'; 
        width: 250px; 
        height: 60px; 
        border-radius: 10px;
        
      }


      .top-container{
        margin-top: 35px;
        width: '150px';
        display: flex;
        flex-direction: row;
        margin-left: 10px;
        margin-right: 10px;
        justify-content: flex-start;
        align-items: center;
      }

      .img-container{
        width: 100px;
        height: 90px;
        border-radius: 5px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;

      }

      img{
        border-radius: 5px;
        width: 100px;
        object-fit:contain;
      }

      .title-container{
        margin: 10px;
      }

      .title-container > p{
        font-size: 11px;
        line-height: 5px;
      }

      .header-text{
        font-size: 17px;
      }

      .content-container{
        margin-left: 10px;
        margin-right: 10px;
        display: flex;
        flex:1;
        width: 100%;
        flex-direction: column;
      }

      .content-container-top{
        flex: 1;
        margin: 20px;
        font-size: 14px;

      }

      .content-container-bottom{
        margin-left: 20px;
        margin-right: 20px;
        margin-top: 20px;
        font-size: 12px;
        align-self: flex-start;
      }

      .bottom-container{
        display: flex;
        align-items: center;
        width: 100vw;
        position: sticky;
        background-color: white;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        bottom: 0;
        display: flex;
        flex-direction: column;
        box-shadow: 1px -4px 13px -3px rgba(0,0,0,0.44);
-webkit-box-shadow: 1px -4px 13px -3px rgba(0,0,0,0.44);
-moz-box-shadow: 1px -4px 13px -3px rgba(0,0,0,0.44);
      }

      #rzp-button1, #go-to-home-button{
        width: 280px;
        height: 55px;
        margin:auto;
        font-size: 22px;
        font-weight: 800;
        font-family: 'Ubuntu', sans-serif;
        color:white;
        letter-spacing: 1px;
        border: none;
        /* margin: 10px; */
        box-shadow: -3px 20px 19px -2px rgba(138, 138, 138, 0.205);
        -webkit-box-shadow: -3px 20px 19px -2px rgba(138, 138, 138, 0.247);
        -moz-box-shadow: -3px 20px 19px -2px rgba(138, 138, 138, 0.185);
        margin: 20px;
        margin-top: 10px;
        background-color: <%= color %>;
      }

      #go-to-home-button{
        margin-top: 40px;
      }

      #rzp-button1:hover{
        opacity: 0.5;
      }

      .success-container{
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100vw;
        height: 100vh;
        text-align: center;
        background: #EBF0F5;
      }

      #success-main{
        display: none;
      }

      #wait-main{
        display: none;
      }

      .success-h1 {
        color: #88B04B;
        font-family: 'Ubuntu', sans-serif; 
        font-weight: 900;
        font-size: 40px;
      }
      .success-p {
        color: #404F5E;
        font-family: 'Ubuntu', sans-serif; 
        margin-left: 20px;
        margin-right: 20px;
        font-size:15px;
        margin: 0;
      }

      .success-i {
        color: #9ABC66;
        font-size: 100px;
        line-height: 200px;
        margin-left:-15px;
      }
      .success-card {
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        width: 90vw;
        background: white;
        border-radius: 4px;
        box-shadow: 0 2px 3px #C8D0D8;
        display: inline-block;
        margin: 0 auto;
      }

    </style>
