    </script>
</head>
<body>

  <div class="wrapper-container" id="success-main">
    <div class="success-container">
      <div class="success-card">
        <div>
          <div class="badge" style="border-radius:200px; height:200px; width:200px; background: #F8FAF5; margin:20px auto;">
            <i class="success-i checkmark">âœ“</i>
          </div>
          <h1 class="success-h1">Success</h1> 
          <p class="success-p" id="success-message"></p>
        </div>
        <button id="go-to-home-button">Go To Home</button>
      </div>
    </div>
  </div>

  <div class="wrapper-container" id="main">
    <div class='top-container'>
      <div class='img-container'>
        <img src="<%= imgUrl %>">
        </img>
      </div>
      <div class="title-container">
        <h1 class="header-text"> <%=notes.productName %> </h1>
        <p><b>Goal: </b><%=goal%></p>
        <p><b>Level: </b><%=level%></p>
      </div>
    </div>

      <div class="content-container">

        <div class="content-container-top">
          <p><%-productDescription%></p>
        </div>

      </div>

      <div class="bottom-container">
        <div class="content-container-bottom">
          <p><b>Duration:</b> <%= duration %> weeks</p>
          <p><b>Subscription Type:</b> <%= notes.planType %></p>
          <p><b>Payable amount (incl. GST):</b> Rs. <%= amount/100%></p>
        </div>
        <button id="rzp-button1">Proceed to Pay</button>
        <!-- <button id="jab">Just A Button</button> -->
      </div>
  </div>
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script>

    var options = {
        "key": "rzp_test_XvlgoOL0WFWEfn", // Enter the Key ID generated from the Dashboard
        "amount": "<%= amount %>", // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
        "currency": "INR",
        "name": "<%= name %>",
        "description": "<%= description %>",
        "image": "<%= imgUrl %>",
        "order_id": "<%= order_id %>", //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
        "handler": function (response){
            let payload = {
              rpResponse: response,
              receiptID: "<%= receiptID %>",
              batch: "<%= batch %>",
            }

            const setLoading = (() => {
              document.getElementById("main").innerHTML = 
              `<div class="success-container">
                <div style="display: flex; flex-direction: column; align-items: center; justifyContent: center;">
                  <div class="spinner-grow text-success" role="status" style="width: 60px; height: 60px;">
                    <span class="sr-only">Loading...</span>
                  </div>
                  <br/>
                  <p style="margin: 25px; font-family: 'Ubuntu', sans-serif; font-size: 0.9rem;"">Please wait while verifying your payment. Please do not go back or exit...</p>
                <div>
              </div>`;
            })

            setLoading()
            fetch("<%= successHandlerUrl %>", {
              method: 'POST',
              headers:{'x-access-token': "<%= authToken %>", 'Content-Type': 'application/json'},
              body: JSON.stringify(payload),
            })
            .then(response => response.json())
            .then((data) => {
              if(data.verificationStatus === 'success'){
                document.getElementById("success-message").innerHTML = data.message;
                document.getElementById("main").style.display = 'none';
                document.getElementById("success-main").style.display = 'block';
              }else{
                alert(data.message)
              }
              
            }
            )

        },
        "prefill": {
            "name": "<%= userName %>",
            "email": "<%= userEmail %>",
        },
        "notes": {
            "address": "Razorpay Corporate Office"
        },
        "theme": {
            "color": "<%= color %>"
        }
    };

    var rzp1 = new Razorpay(options);

    rzp1.on('payment.failed', function (response){
            alert("Payment Failed")
            alert(response.error.code);
            alert(response.error.description);
            alert(response.error.source);
            alert(response.error.step);
            alert(response.error.reason);
            alert(response.error.metadata.order_id);
            alert(response.error.metadata.payment_id);
    });

    document.getElementById('rzp-button1').onclick = function(e){
        rzp1.open();
        e.preventDefault();
    }

  document.getElementById('go-to-home-button').onclick = function(e){
        window.ReactNativeWebView.postMessage("go_to_home")
      }
  </script>
</body>
</html>